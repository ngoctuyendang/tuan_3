<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Background">
    <ImageView
            android:id="@+id/img0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"

    />
    <ImageView
            android:layout_marginStart="50dp"
            android:layout_marginTop="180dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/apple"
            android:src="@drawable/apple"
            android:clickable="false" android:onClick="img1"/>
    <ImageView
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feet"
            android:src="@drawable/feet"
            android:layout_below="@+id/apple"

            android:onClick="img4"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/cry"
               android:src="@drawable/cry"
               android:layout_toRightOf="@+id/apple"
               android:layout_marginTop="180dp"

               android:onClick="img2"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/heart"
               android:src="@drawable/heart"
               android:layout_toRightOf="@+id/cry"
               android:layout_marginTop="180dp"
               android:onClick="img3"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"


    />
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/glad"
               android:src="@drawable/glad"
               android:layout_toRightOf="@+id/feet"
               android:layout_below="@+id/apple"
               android:onClick="img5"/>
    <ImageView android:layout_width="99dp"
               android:layout_height="90dp"
               android:id="@+id/myhouse"
               android:src="@drawable/myhouse"
               android:layout_toRightOf="@id/glad"
               android:layout_below="@+id/apple"
               android:onClick="img6"/>
    <Button android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textColor="#222222"
            android:layout_below="@+id/feet"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:onClick="btnsave"/>

</RelativeLayout>