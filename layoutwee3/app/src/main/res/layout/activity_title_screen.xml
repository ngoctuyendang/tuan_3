<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Title_screen">
    <EditText
            android:id="@+id/Edit1"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint=""
            android:maxLines="2"
            android:textSize="12dp" android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"/>

    <Button
            android:id="@+id/btn0"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/Edit1"
            android:background="@drawable/btn0"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"/>

    <Button
            android:id="@+id/btn1"
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:layout_below="@id/Edit1"
            android:background="@drawable/btn1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp" android:onClick="btnpink"/>
    <Button
            android:id="@+id/btn2"
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:layout_toRightOf="@id/btn1"
            android:layout_below="@id/Edit1"
            android:background="@drawable/btn2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" android:onClick="btngreen"/>
    <Button
            android:id="@+id/btn3"
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:layout_toRightOf="@id/btn2"
            android:layout_below="@id/Edit1"
            android:background="@drawable/btn3"
            android:layout_marginRight="20dp" android:layout_marginTop="10dp" android:onClick="btnyellow"/>

    <Button
            android:id="@+id/btn4"
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:layout_below="@id/btn1"
            android:background="@drawable/btn4"
            android:layout_marginLeft="25dp" android:onClick="btnblue"/>

    <Button
            android:id="@+id/btn5"
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:layout_toRightOf="@id/btn4"
            android:layout_below="@id/btn2"
            android:background="@drawable/btn5"
            android:layout_centerHorizontal="true"

            android:onClick="btnnude"/>

    <Button
            android:id="@+id/btn6"
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:layout_toRightOf="@id/btn5"
            android:layout_below="@id/btn2"
            android:background="@drawable/btn6"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp" android:onClick="btnred"/>

    <Button
            android:id="@+id/Save"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_below="@id/btn5"
            android:layout_centerHorizontal="true"
            android:text="SAVE"
            android:textColor="#222222"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:onClick="btnsave"/>
</RelativeLayout>